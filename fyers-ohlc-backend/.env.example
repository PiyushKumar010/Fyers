# Backend Environment Variables
# Copy this file to .env and fill in your values

# Fyers API Credentials
FYERS_CLIENT_ID=your_client_id_here
FYERS_SECRET_KEY=your_secret_key_here
FYERS_REDIRECT_URI=http://127.0.0.1:8000/auth/callback

# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DB_NAME=fyers_ohlc

# CORS Configuration (optional - for production add your frontend URLs)
# Comma-separated list of additional allowed origins (e.g., https://your-app.vercel.app,https://custom-domain.com)
ALLOWED_ORIGINS=

# Token Refresh Settings (optional)
REFRESH_BUFFER_SECONDS=60
REFRESH_CHECK_INTERVAL=300
DISABLE_TOKEN_REFRESHER=false

# Live Data Storage (optional)
DISABLE_LIVE_DATA_STORAGE=true
LIVE_DATA_THRESHOLD_DAYS=1
